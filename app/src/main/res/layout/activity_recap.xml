<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.i14048.pkl.TransactionActivity">

    <TextView
        android:id="@+id/titleRecapText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Recap Text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:typeface="normal" />

    <ListView
        android:id="@+id/recapListView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleRecapText"
        android:layout_above="@id/totalText"
        android:layout_marginBottom="8dp"
        ></ListView>

    <Button
        android:id="@+id/transactionButtonRecap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction"
        android:layout_above="@+id/katalogButtonRecap"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/katalogButtonRecap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Katalog"
        android:layout_above="@+id/exitButtonRecap"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/exitButtonRecap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Total Transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transactionButtonRecap"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/totalText"
        android:textSize="18sp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/totalText"
        android:layout_alignParentEnd="true"
        android:id="@+id/totalCountTransaction"
        android:textSize="18sp" />

</RelativeLayout>

